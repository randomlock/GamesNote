<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F44336">


        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/headerbackground"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:adjustViewBounds="true" />

        <Button
            android:id="@+id/length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textColor="@color/white"
            android:background="#35000000"
            android:textSize="12sp"
            android:layout_above="@+id/title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#35000000"
            android:text="watched"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_alignTop="@+id/length"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/video_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#35000000"
            android:text="Video Type"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_margin="12dp"
            android:text="video title"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_below="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:text="video description"
            android:textColor="@color/white"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="12dp" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?android:attr/textColorPrimary"
            android:alpha="0.3"
            android:layout_below="@+id/description" />


        <LinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view4">


            <ImageButton
                android:id="@+id/watch_later"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:tint="@color/white"
                android:textColor="@color/primary"
                android:visibility="gone"
                android:maxLines="1"
                android:layout_margin="12dp"
                android:gravity="center"
                android:typeface="sans"
                android:background="@null"
                android:src="@drawable/ic_timer_grey600_24dp" />

            <ImageButton
                android:id="@+id/like"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:tint="@color/white"
                android:visibility="gone"
                android:textColor="@color/primary"
                android:maxLines="1"
                android:layout_margin="12dp"
                android:gravity="center"
                android:background="@null"
                android:src="@drawable/ic_heart_outline_grey600_24dp" />


            <ImageButton
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:tint="@color/white"
                android:textColor="@color/primary"
                android:visibility="gone"
                android:maxLines="1"
                android:layout_margin="12dp"
                android:gravity="center"
                android:background="@null"
                android:src="@drawable/ic_share_grey600_24dp" />

        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>