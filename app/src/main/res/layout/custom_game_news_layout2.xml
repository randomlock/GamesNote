<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="12dp">


    <TextView
        android:id="@+id/news_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/primary_text"
        style="@style/TextStyle3"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/cardView"
        android:layout_toStartOf="@+id/cardView"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/news_date" />

    <TextView
        android:id="@+id/news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/cardView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/news_heading"
        android:layout_alignEnd="@+id/news_heading" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/cardColor">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_keyboard_arrow_left_white_24dp" />


    </android.support.v7.widget.CardView>

</RelativeLayout>



