<?xml version="1.0" encoding="utf-8"?>




<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/leftmargin"
    android:layout_marginRight="@dimen/leftmargin"
    android:layout_marginTop="@dimen/leftmargin"
    android:layout_marginBottom="@dimen/bottommargin"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#FAFAFA"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp"
    >

  <!-- change scale type to see the difference -->



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

<com.example.randomlocks.gamesnote.HelperClass.DynamicHeightImageView
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:src="@drawable/testimage"
    android:id="@+id/imageView"
    />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Game Title"
    android:maxLines="2"
    android:ellipsize="end"
    android:gravity="center_horizontal"
    style="@style/sectionHeader"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_toLeftOf="@+id/dropdown"
    android:layout_toStartOf="@+id/dropdown" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release date"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            style="@style/SubTitleText"
            android:layout_above="@+id/view"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />


     <View
         android:id="@+id/view"
         android:layout_width="match_parent"
         android:layout_height="@dimen/line"
         android:background="@color/linecolor"
         android:layout_centerVertical="true"

          />

    <View
        android:id="@+id/dropdown"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:foregroundGravity="top"
        android:background="@drawable/ic_arrow_drop_down_black_36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLATFORM"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true" />




    <Button
        android:id="@+id/platform3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:fontFamily="sans-serif"
        android:text="PC"
        android:textColor="@color/accent"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/platform2"
        android:layout_toEndOf="@+id/platform2" />

    <Button
        android:id="@+id/platform1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PS3"
        android:background="@null"
        android:textColor="@color/accent"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/platform2"
        android:layout_toStartOf="@+id/platform2" />

    <Button
        android:id="@+id/platform2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Xbox"
        android:fontFamily="sans-serif"
        android:textColor="@color/accent"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

</RelativeLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:textStyle="italic"
        android:background="@color/linecolor"
        android:gravity="center_horizontal"
        android:text="@string/desc"
        android:fontFamily="sans-serif-light" />


</LinearLayout>

</android.support.v7.widget.CardView>