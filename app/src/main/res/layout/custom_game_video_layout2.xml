<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="?android:selectableItemBackground">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@+id/popup"
        android:layout_toStartOf="@+id/popup"
        android:gravity="top"
        android:text="Hello how are your bro"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        />


    <ImageButton
        android:id="@+id/popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/cardView"
        android:layout_toStartOf="@+id/cardView"
        android:background="@null"
        android:src="@drawable/ic_action_navigation_more_vert"
        />


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/cardColor"
        app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            />

        <com.flyco.labelview.LabelView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lv_background_color="@color/primary"
            app:lv_text="hello"
            app:lv_text_size="12sp"
            />

        <com.flyco.labelview.LabelView
            android:id="@+id/is_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:visibility="gone"
            app:lv_background_color="@color/primary"
            app:lv_gravity="BOTTOM_RIGHT"
            app:lv_text="watched"
            app:lv_text_size="12sp"

            />


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/cardView"
        android:layout_toStartOf="@+id/cardView"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="hello bro how are you ding in this world"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/description"
        android:layout_marginTop="4dp"
        android:fontFamily="serif"
        android:gravity="center_vertical"
        android:text="-"
        android:textColor="@color/black_white"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/cardView"
        android:layout_toStartOf="@+id/cardView"
        android:gravity="end"
        android:paddingEnd="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingStart="12dp"
        android:text="-"
        android:textColor="@color/accent"
        android:textSize="12sp"
        />



</RelativeLayout>



