<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:windowBackground">@color/primary_character</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>


    </style>


    <style name="popMenu" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">

        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#cdFFFFFF</item>
        <item name="android:textSize">16sp</item>


    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Dialog">
        <!--item RadioButton or CheckBox color-->
        <item name="colorControlNormal">@color/black_white</item>
        <item name="colorControlActivated">@color/accent</item>
        <!--item text color-->
        <item name="textColorAlertDialogListItem">?android:attr/textColorPrimary</item>
        <!--buttons color-->
        <item name="colorAccent">@color/primary</item>
        <!--title and message color-->
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:background">@color/cardColor</item>

    </style>




</resources>