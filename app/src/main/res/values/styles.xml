<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>


    </style>

    <style name="RootTheme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen"></style>

    <style name="PlayerTheme" parent="@style/RootTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>


    <style name="MyToolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="searchViewStyle">@style/searchStyle</item>
        <item name="popupTheme">@style/popMenu</item>
        <item name="colorControlNormal">@color/white</item>
    </style>


    <style name="popMenu" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyToolbarLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="searchViewStyle">@style/searchStyle</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="popupTheme">@style/popMenu</item>


    </style>


    <style name="MyTransparentToolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">

        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>

    </style>

   <style name="TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title" >

       <item name="android:fontFamily">sans-serif</item>
       <item name="android:textColor">#cd000000</item>
       <item name="android:textSize">16sp</item>



   </style>




    <style name="searchStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="queryHint">@string/search</item>
        <item name="searchIcon">@null</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/black</item>



    </style>

    <style name="SubTitleText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>

        <item name="android:textAppearance">?attr/textAppearanceLargePopupMenu</item>

    </style>

    <style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceLargePopupMenu</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>






    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0.1sp</item>
    </style>




    <style name="MyDialogTheme" parent="Theme.AppCompat.Dialog">
    <!--item RadioButton or CheckBox color-->
    <item name="colorControlNormal">@android:color/white</item>
    <item name="colorControlActivated">@color/accent</item>
    <!--item text color-->
    <item name="textColorAlertDialogListItem">@color/white</item>
        <!--buttons color-->
        <item name="colorAccent">@color/accent</item>
        <!--title and message color-->
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/primary</item>


    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>


    <style name="TextStyle1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextStyle3">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle4">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle5">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextStyle6">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextStyle7">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle8">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextStyle9">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle10">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextStyle11">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle12">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold|italic</item>
    </style>


    <style name="cardview_textstyle">
        <item name="android:layout_width">match_parent </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-thin|bold</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="webviewToolbar" parent="MyToolbarLight">
        <item name="colorControlNormal">@color/black</item>
    </style>


    <style name="CharacterTextStyle" parent="TextAppearance.AppCompat">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>

        <item name="android:textColor">@color/primary_text</item>

    </style>


    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="webviewTitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="webviewSubtitle">
        <item name="android:textSize">11sp</item>
    </style>

</resources>
